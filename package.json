{
    "name": "gamers-community.front",
    "version": "0.0.1",
    "scripts": {
        "start": "ng serve --open --watch",
        "dev": "ng serve --configuration development --open --watch",
        "watch": "ng build --localize --watch --configuration development",
        "lint": "npx eslint src",
        "lint:fix": "npx eslint src --fix",
        "build": "ng build --localize --configuration production",
        "build:dev": "ng build --localize --configuration development",
        "test": "ng test --watch=false --browsers=ChromeHeadless",
        "test:watch": "ng test --watch=true",
        "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
        "check:all": "npm run lint && npm run test:ci",
        "i18n": "ng extract-i18n --output-path src/locale --out-file source.json --format=json"
    },
    "private": true,
    "dependencies": {
        "@angular/cdk": "20.2.14",
        "@angular/common": "20.3.13",
        "@angular/compiler": "20.3.13",
        "@angular/core": "20.3.13",
        "@angular/forms": "20.3.13",
        "@angular/platform-browser": "20.3.13",
        "@angular/router": "20.3.13",
        "@nebular/auth": "^16.0.0",
        "@nebular/eva-icons": "16.0.0",
        "@nebular/security": "^16.0.0",
        "@nebular/theme": "16.0.0",
        "keycloak-angular": "20.0.0",
        "keycloak-js": "26.2.1",
        "rxjs": "7.8.2",
        "tslib": "2.8.1",
        "zone.js": "0.15.1"
    },
    "devDependencies": {
        "@angular-eslint/eslint-plugin": "20.6.0",
        "@angular-eslint/eslint-plugin-template": "20.6.0",
        "@angular-eslint/template-parser": "20.6.0",
        "@angular/build": "20.3.11",
        "@angular/cli": "20.3.11",
        "@angular/compiler-cli": "20.3.13",
        "@angular/localize": "20.3.13",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.39.1",
        "@types/jasmine": "5.1.13",
        "@typescript-eslint/eslint-plugin": "8.47.0",
        "@typescript-eslint/parser": "8.47.0",
        "eslint": "9.39.1",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jsdoc": "61.4.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "jasmine-core": "5.12.1",
        "karma": "6.4.4",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage": "2.2.1",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "prettier": "3.6.2",
        "typescript": "5.9.3",
        "typescript-eslint": "8.47.0"
    }
}
