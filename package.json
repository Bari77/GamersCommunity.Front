{
    "name": "gamers-community.front",
    "version": "0.0.1",
    "scripts": {
        "start": "ng serve --open --watch",
        "dev": "ng serve --configuration development --open --watch",
        "watch": "ng build --watch --configuration development",
        "lint": "npx eslint . --ext .ts,.html",
        "lint:fix": "npx eslint . --ext .ts,.html --fix",
        "format": "npx prettier --write .",
        "format:check": "npx prettier --check .",
        "build": "ng build --configuration production",
        "build:dev": "ng build --configuration development",
        "test": "ng test --watch=false --browsers=ChromeHeadless",
        "test:watch": "ng test --watch=true",
        "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
        "check:all": "npm run format:check && npm run lint && npm run test"
    },
    "private": true,
    "dependencies": {
        "@angular/common": "20.3.9",
        "@angular/compiler": "20.3.9",
        "@angular/core": "20.3.9",
        "@angular/forms": "20.3.9",
        "@angular/platform-browser": "20.3.9",
        "@angular/router": "20.3.9",
        "rxjs": "7.8.1",
        "tslib": "2.3.0",
        "zone.js": "0.15.0"
    },
    "devDependencies": {
        "@angular-eslint/eslint-plugin": "20.5.0",
        "@angular-eslint/eslint-plugin-template": "20.5.0",
        "@angular-eslint/template-parser": "20.5.0",
        "@angular/build": "20.3.8",
        "@angular/cli": "20.3.8",
        "@angular/compiler-cli": "20.3.9",
        "@types/jasmine": "5.1.0",
        "@typescript-eslint/eslint-plugin": "8.46.2",
        "@typescript-eslint/parser": "8.46.2",
        "eslint": "9.39.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "jasmine-core": "5.9.0",
        "karma": "6.4.0",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage": "2.2.0",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "prettier": "3.6.2",
        "typescript": "5.9.2"
    }
}
